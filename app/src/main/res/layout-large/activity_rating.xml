<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="insideOverlay">

    <ImageView
        android:id="@+id/rating_star5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/starg"
        app:layout_constraintBottom_toTopOf="@+id/rating_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_expertise"
        app:layout_constraintVertical_bias="0.501" />

    <ImageView
        android:id="@+id/rating_star4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/starg"
        app:layout_constraintBottom_toTopOf="@+id/rating_text"
        app:layout_constraintEnd_toStartOf="@+id/rating_star5"
        app:layout_constraintStart_toEndOf="@+id/rating_star3"
        app:layout_constraintTop_toBottomOf="@+id/rating_expertise"
        app:layout_constraintVertical_bias="0.501" />

    <ImageView
        android:id="@+id/rating_star3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/starg"
        app:layout_constraintBottom_toTopOf="@+id/rating_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_expertise" />

    <ImageView
        android:id="@+id/rating_star2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/starg"
        app:layout_constraintBottom_toBottomOf="@+id/rating_star3"
        app:layout_constraintEnd_toStartOf="@+id/rating_star3"
        app:layout_constraintStart_toEndOf="@+id/rating_star1"
        app:layout_constraintTop_toBottomOf="@+id/rating_line3" />

    <ImageView
        android:id="@+id/rating_star1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/starg"
        app:layout_constraintBottom_toTopOf="@+id/rating_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_expertise"
        app:layout_constraintVertical_bias="0.501" />

    <TextView
        android:id="@+id/rating_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="محمدحسین شاه محمدی"
        android:gravity="center"
        android:textSize="24dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_header" />

    <TextView
        android:id="@+id/rating_expertise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:gravity="center"
        android:text="برنامه نویسی"
        android:textSize="20dp"
        android:textColor="@color/RakaarColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating_name" />

    <ImageView
        android:id="@+id/rating_headerback"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#43b0be"
        app:layout_constraintBottom_toBottomOf="@+id/rating_header"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/rating_header"
        app:layout_constraintRight_toRightOf="@+id/rating_header"
        app:layout_constraintTop_toTopOf="@+id/rating_header" />

    <TextView
        android:id="@+id/rating_header"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="ثبت امتیاز"
        android:textColor="#ffffff"
        android:textSize="24dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rating_button"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/enterbutton"
        android:text="ثبت"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deadline_fileback" />

    <TextView
        android:id="@+id/rating_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="64dp"
        android:gravity="center"
        android:text="با ثبت امتیاز ما را در بهبود خدمات راکار یاری کنید"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/rating_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/rating_line1"
        android:layout_width="4dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/ratingline_gu"
        app:layout_constraintBottom_toTopOf="@+id/rating_star1"
        app:layout_constraintEnd_toEndOf="@+id/rating_star1"
        app:layout_constraintStart_toStartOf="@+id/rating_star1" />

    <ImageView
        android:id="@+id/rating_line2"
        android:layout_width="4dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/ratingline_gd"
        app:layout_constraintEnd_toEndOf="@+id/rating_star2"
        app:layout_constraintStart_toStartOf="@+id/rating_star2"
        app:layout_constraintTop_toBottomOf="@+id/rating_star2" />

    <ImageView
        android:id="@+id/rating_line3"
        android:layout_width="4dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/ratingline_gu"
        app:layout_constraintBottom_toTopOf="@+id/rating_star3"
        app:layout_constraintEnd_toEndOf="@+id/rating_star3"
        app:layout_constraintStart_toStartOf="@+id/rating_star3" />

    <ImageView
        android:id="@+id/rating_line4"
        android:layout_width="4dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/ratingline_gd"
        app:layout_constraintEnd_toEndOf="@+id/rating_star4"
        app:layout_constraintStart_toStartOf="@+id/rating_star4"
        app:layout_constraintTop_toBottomOf="@+id/rating_star4" />

    <ImageView
        android:id="@+id/rating_line5"
        android:layout_width="4dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/ratingline_gu"
        app:layout_constraintBottom_toTopOf="@+id/rating_star5"
        app:layout_constraintEnd_toEndOf="@+id/rating_star5"
        app:layout_constraintStart_toStartOf="@+id/rating_star5" />

    <TextView
        android:id="@+id/rating_text1"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="اصلا رضایت بخش نبود"
        android:textSize="18dp"
        android:textColor="#999999"
        app:layout_constraintBottom_toTopOf="@+id/rating_line1"
        app:layout_constraintEnd_toEndOf="@+id/rating_star1"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/rating_star1" />

    <TextView
        android:id="@+id/rating_text2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="دور از انتظاراتم بود"
        android:textSize="18dp"
        android:textColor="#999999"
        app:layout_constraintEnd_toEndOf="@+id/rating_star2"
        app:layout_constraintStart_toStartOf="@+id/rating_star2"
        app:layout_constraintTop_toBottomOf="@+id/rating_line2" />

    <TextView
        android:id="@+id/rating_text3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="در حد متوسط بود"
        android:textSize="18dp"
        android:textColor="#999999"
        app:layout_constraintBottom_toTopOf="@+id/rating_line3"
        app:layout_constraintEnd_toEndOf="@+id/rating_star3"
        app:layout_constraintStart_toStartOf="@+id/rating_star3" />

    <TextView
        android:id="@+id/rating_text4"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="میتونست بهتر باشه"
        android:textSize="18dp"
        android:textColor="#999999"
        app:layout_constraintEnd_toEndOf="@+id/rating_star4"
        app:layout_constraintStart_toStartOf="@+id/rating_star4"
        app:layout_constraintTop_toBottomOf="@+id/rating_line4" />

    <TextView
        android:id="@+id/rating_text5"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="فوق العاده بود"
        android:textSize="18dp"
        android:textColor="#999999"
        app:layout_constraintBottom_toTopOf="@+id/rating_line5"
        app:layout_constraintEnd_toEndOf="@+id/rating_line5"
        app:layout_constraintStart_toStartOf="@+id/rating_line5" />

</android.support.constraint.ConstraintLayout>
