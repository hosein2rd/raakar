<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/messages_green"
            android:layout_width="36dp"
            android:layout_height="24dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/messages_date"
            app:layout_constraintLeft_toRightOf="@+id/messages_date"
            app:layout_constraintTop_toTopOf="@+id/messages_date"
            app:srcCompat="@drawable/greenbox"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/messages_num"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="2"
            android:textColor="#ffffff"
            android:textSize="12dp"
            app:layout_constraintTop_toTopOf="@+id/messages_green"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/messages_green"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/messages_green"
            app:layout_constraintBottom_toBottomOf="@+id/messages_green"
            android:layout_marginBottom="0dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/messages_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:gravity="left"
            android:textSize="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:gravity="right"
            android:id="@+id/messages_text"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="6dp"
            android:text="لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از ..."
            android:textColor="@color/RakaarColor"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/messages_name"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/messages_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:text="اکبر آقا عبدی"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>